generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  role      Role     @default(RESELLER)
  phone     String?
  isActive  Boolean  @default(true)
  lastLogin DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  resellerOrders Order[] @relation("OrderReseller")
  producerOrders Order[] @relation("OrderProducer")
  notifications  Notification[]

  @@map("users")
}

model Order {
  id            String     @id @default(cuid())
  customerName  String
  theme         String
  target        String
  color         String
  notes         String?
  status        OrderStatus @default(PENDING)
  paymentStatus PaymentStatus @default(PENDING)
  requestedDate DateTime   @default(now())
  completedDate DateTime?
  
  resellerId    String
  reseller      User       @relation("OrderReseller", fields: [resellerId], references: [id], onDelete: Cascade)
  
  producerId    String?
  producer      User?      @relation("OrderProducer", fields: [producerId], references: [id], onDelete: SetNull)
  
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  @@map("orders")
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  type      String
  title     String
  message   String
  isRead    Boolean  @default(false)
  metadata  String?
  createdAt DateTime @default(now())

  @@map("notifications")
}

enum Role {
  ADMIN
  RESELLER
  PRODUCER
}

enum OrderStatus {
  PENDING
  IN_PROGRESS
  READY
  DELIVERED
  CANCELLED
}

enum PaymentStatus {
  PENDING
  HALF_PAID
  FULLY_PAID
  NOT_PAID
}